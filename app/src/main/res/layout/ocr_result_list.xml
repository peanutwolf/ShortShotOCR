<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/detectedFont_interval"
        android:id="@+id/imgview_ocr_bitmap"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ocr_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgview_ocr_bitmap"
        android:layout_margin="@dimen/detectedFont_interval"
        android:scrollbars="vertical"/>

    <Button
        android:id="@id/btn_ocr_result_cancel"
        android:text="@string/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_ocr_result"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/sp12_size"
        android:layout_alignParentStart="true" />

</RelativeLayout>